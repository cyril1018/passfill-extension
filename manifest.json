{
  "manifest_version": 3,
  "name": "PassFill",
  "version": "1.0",
  "default_locale": "en",
  "description": "Manage and autofill test accounts and passwords.",
  "permissions": ["storage", "activeTab", "scripting", "sidePanel"],
  "action": {
    "default_title": "PassFill",
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker.js"
  }
}
